{
	"schemaVersion": 1,
	"id": "fbp",
	"name": "${mod_name}",
	"version": "${mod_version}",
	"description": "3D Digging particles! YAY!",
	"icon": "logo.png",
	"license": "GPLv3",
	"authors": [
		"Hantonik",
		"TominoCZ"
	],
	"contact": {
		"homepage": "https://www.curseforge.com/minecraft/mc-mods/fbp-renewed",
		"sources": "https://github.com/Hantonik/FancyBlockParticles",
		"issues": "https://github.com/Hantonik/FancyBlockParticles/issues"
	},

	"environment": "client",
	"entrypoints": {
		"client": [
			"hantonik.fbp.FBPFabric"
		]
	},
	"depends": {
		"fabricloader": ">=0.14.0",
		"fabric-api": ">=0.66.0",
		"minecraft": "~${mc_version}",
		"java": ">=${java_version}"
	},

	"mixins": [
		"fbp.mixins.json",
		"fbp.fabric.mixins.json"
	],
	"accessWidener": "fbp.accesswidener"
}